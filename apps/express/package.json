{
  "name": "@repo/express",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "pnpm run node:strip --watch-path=./src",
    "build": "pnpm run build:client && pnpm run build:server",
    "build:client": "vite build app --outDir dist/client",
    "build:server": "vite build app --ssr entry-server.tsx --outDir dist/server",
    "preview": "cross-env NODE_ENV=production pnpm run node:strip",
    "node:strip": "node --experimental-strip-types --experimental-transform-types --disable-warning=ExperimentalWarning ./src/app.ts"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:^",
    "@repo/typescript-config": "workspace:^",
    "@types/compression": "^1.7.5",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.6",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "typescript": "^5.7.3",
    "vite": "^6.1.1"
  },
  "dependencies": {
    "compression": "^1.8.0",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.2.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-router": "^7.5.0",
    "sirv": "^3.0.1"
  },
  "nodemonConfig": {
    "ignore": [
      "./src/app"
    ]
  }
}
