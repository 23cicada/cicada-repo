<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport"
        content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Form</title>
</head>
<body>
  <form method="POST" action="/views/msg-board/new">
    <label>
      Name:
      <input name="username" id="name" placeholder="Name" />
    </label>
    <br >
    <label>
      Message:
      <input name="text" id="message" placeholder="Message" />
    </label>
    <br >
    <% errors.map(msg => { %>
      <div><%= msg %></div>
    <% }) %>
    <button type="submit">Submit</button>
  </form>
</body>
</html>
